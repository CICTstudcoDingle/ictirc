# Environment Variables

# Supabase (Auth + Hot Storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database (Prisma)
# Use Transaction Mode (Port 6543) for DATABASE_URL
DATABASE_URL="postgres://postgres.PROJECT_ID:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Use Session Mode (Port 5432) for DIRECT_URL (Migrations)
DIRECT_URL="postgres://postgres.PROJECT_ID:PASSWORD@aws-0-REGION.pooler.supabase.com:5432/postgres"

# Object Storage (Hot)
NEXT_PUBLIC_SUPABASE_BUCKET_HOT="archive"

# Cloudflare R2 (Cold Storage / Backup)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME_COLD=ictirc

# App URL (for SEO metadata)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Algolia Search (Get from https://www.algolia.com/)
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_ADMIN_API_KEY=your_algolia_admin_api_key
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your_algolia_search_api_key
ALGOLIA_INDEX_PREFIX=ictirc
