generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  extensions = [fuzzystrmatch]
}

// ============================================
// ENUMS
// ============================================

enum PaperStatus {
  SUBMITTED
  UNDER_REVIEW
  ACCEPTED
  PUBLISHED
  REJECTED
}

enum UserRole {
  AUTHOR
  REVIEWER
  EDITOR
  DEAN
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

// ============================================
// MODELS
// ============================================

model Paper {
  id          String      @id @default(cuid())
  title       String
  abstract    String      @db.Text
  keywords    String[]
  doi         String?     @unique
  status      PaperStatus @default(SUBMITTED)
  pdfUrl      String?
  rawFileUrl  String?
  publishedAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  authors    PaperAuthor[]
  category   Category      @relation(fields: [categoryId], references: [id])
  categoryId String
  comments   PaperComment[]
  reviewers  PaperReviewer[]

  // Publication Tracking (1-7)
  publicationStep Int     @default(1)
  publicationNote String?

  @@index([status])
  @@index([categoryId])
  @@index([publishedAt])
}

model Author {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  affiliation String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  papers PaperAuthor[]

  @@index([email])
}

model PaperAuthor {
  id       String  @id @default(cuid())
  order    Int     @default(0)
  paper    Paper   @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId  String
  author   Author  @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  @@unique([paperId, authorId])
  @@index([paperId])
  @@index([authorId])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Hierarchy Connection
  parentId String?
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")

  // Relations
  papers         Paper[]
  archivedPapers ArchivedPaper[]

  @@index([parentId])
}

model PaperComment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  paper    Paper   @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId  String
  author   User    @relation(fields: [authorId], references: [id])
  authorId String

  @@index([paperId])
  @@index([authorId])
  @@index([createdAt])
}

model PaperReviewer {
  id         String    @id @default(cuid())
  assignedAt DateTime  @default(now())
  reviewedAt DateTime?

  // Relations
  paper      Paper   @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId    String
  reviewer   User    @relation(fields: [reviewerId], references: [id])
  reviewerId String

  @@unique([paperId, reviewerId])
  @@index([paperId])
  @@index([reviewerId])
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id        String   @id // Supabase Auth UID
  email     String   @unique
  name      String?
  role      UserRole @default(AUTHOR)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  invites          InviteToken[]
  comments         PaperComment[]
  assignedPapers   PaperReviewer[]
  uploadedArchives ArchivedPaper[]

  @@index([email])
  @@index([role])
}

model InviteToken {
  id        String       @id @default(cuid())
  email     String
  role      UserRole     @default(AUTHOR)
  token     String       @unique @default(cuid())
  status    InviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime     @default(now())

  // Relations
  invitedBy   User?   @relation(fields: [invitedById], references: [id])
  invitedById String?

  @@index([token])
  @@index([email])
  @@index([status])
}

// ============================================
// EVENTS & RESEARCH GUIDES
// ============================================

model ResearchGuide {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String   // Legacy field, migrate to guideCategory
  fileUrl     String
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // New Relation
  guideCategoryId String?
  guideCategory   ResearchGuideCategory? @relation(fields: [guideCategoryId], references: [id])

  @@index([category])
  @@index([isPublished])
  @@index([guideCategoryId])
}

model ResearchGuideCategory {
  id          String          @id @default(cuid())
  name        String          @unique
  slug        String          @unique
  description String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relations
  guides      ResearchGuide[]

  @@index([slug])
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text

  @@index([key])
}

// ============================================
// AUDIT & TRACKING
// ============================================

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String
  actorEmail String?
  action     String
  targetId   String
  targetType String
  metadata   Json?
  ipAddress  String?
  createdAt  DateTime @default(now())

  @@index([actorId])
  @@index([targetId])
  @@index([createdAt])
}

model DoiSequence {
  id    String @id @default("doi_counter")
  year  Int
  count Int    @default(0)

  @@unique([year])
}

// ============================================
// ARCHIVE MODELS
// ============================================

model Volume {
  id           String   @id @default(cuid())
  volumeNumber Int
  year         Int
  description  String?  @db.Text
  coverImageUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  issues Issue[]

  @@unique([volumeNumber, year])
  @@index([year])
  @@index([volumeNumber])
}

model Issue {
  id            String   @id @default(cuid())
  issueNumber   Int
  month         String?
  publishedDate DateTime
  issn          String?
  theme         String?  @db.Text
  description   String?  @db.Text
  coverImageUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  volume       Volume          @relation(fields: [volumeId], references: [id], onDelete: Cascade)
  volumeId     String
  conference   Conference?     @relation(fields: [conferenceId], references: [id])
  conferenceId String?
  papers       ArchivedPaper[]

  @@unique([volumeId, issueNumber])
  @@index([volumeId])
  @@index([conferenceId])
  @@index([publishedDate])
}

model Conference {
  id          String    @id @default(cuid())
  name        String
  fullName    String?   @db.Text
  description String?   @db.Text
  startDate   DateTime
  endDate     DateTime?
  location    String?
  venue       String?   @db.Text
  theme       String?   @db.Text
  organizers  String[]  @default([])
  partners    String[]  @default([])
  logoUrl     String?
  imageUrl    String?
  websiteUrl  String?
  isPublished Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  issues Issue[]

  @@index([startDate])
  @@index([isPublished])
}

model ArchivedPaper {
  id            String    @id @default(cuid())
  title         String
  abstract      String    @db.Text
  keywords      String[]
  doi           String?   @unique
  pdfUrl        String
  docxUrl       String?
  pageStart     Int?
  pageEnd       Int?
  publishedDate DateTime
  submittedDate DateTime?
  acceptedDate  DateTime?
  uploadedAt    DateTime  @default(now())
  uploadedBy    String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  authors    ArchivedPaperAuthor[]
  category   Category              @relation(fields: [categoryId], references: [id])
  categoryId String
  issue      Issue                 @relation(fields: [issueId], references: [id], onDelete: Cascade)
  issueId    String
  uploader   User                  @relation(fields: [uploadedBy], references: [id])

  @@index([issueId])
  @@index([categoryId])
  @@index([publishedDate])
  @@index([uploadedAt])
}

model ArchivedPaperAuthor {
  id              String  @id @default(cuid())
  name            String
  email           String?
  affiliation     String?
  order           Int     @default(0)
  isCorresponding Boolean @default(false)

  // Relations
  paper   ArchivedPaper @relation(fields: [paperId], references: [id], onDelete: Cascade)
  paperId String

  @@index([paperId])
  @@index([email])
}

